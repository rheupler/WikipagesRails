<h1>Here are all the countries:</h1>

<ul>
  <% @countries.each do |country| %>
  <li><%= link_to country.name, country_path(country) %> |
  <%= link_to 'Edit', edit_country_path(country) %> |
  <%= link_to 'Delete', country_path(country),
  :data => {:confirm => "You sure?",
    :method => 'delete'} %>
  </li>
  <% end %>
</ul>

<button><%= link_to 'New Country', new_country_path %></button>
